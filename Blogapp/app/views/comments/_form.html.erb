<div class="row"> 
  <div class="col-sm-8">
    <%= form_for([@blog, @blog.comments.build]) do |f| %>

      <div class="form-group">
        <%= f.label :user_name, { class: 'required'}%>
        <%= f.text_field :user_name, { class: 'form-control1'}%>
      </div>

      <div class="form-group">
        <%= f.label :email, { class: 'required'}%>
        <%= f.text_field :email, { class: 'form-control1', type: 'email'} %>
      </div>

      <div class="form-group">
        <%= f.label(:website, "Website(optional)")%>
        <%= f.text_field :website, { class: 'form-control1'} %>
      </div>

      <div class="form-group" hidden>
        <label for="comment_website" hidden>Website1</label>
        <input class="form-control1" type="text" name="comment[website1]" id="comment_website1">
      </div>

      <div class="form-group">
        <%= f.label :message, { class: 'required'}%>
        <%= f.text_area :message, { class: 'form-control', style: 'border: 1px solid #ccc;'} %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-info"%>
      </div>

    <% end %>
  </div>
  <div class="col-sm-4"></div>
</div>