<%= form_for @blog, html: {multipart: true} do |f|%>

	<% if @blog.errors.any? %>
	
	  <div id="error_explanation">
	    <h3>
	      <%= pluralize(@blog.errors.count, "error") %> prohibited
	      this blog from being saved:
	    </h3>
	    <ul>
	      <% @blog.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="row">
		<div class="col-sm-8">
			<div class="form-group">
				<%= f.label :title%>
				<%= f.text_field :title, { class: 'form-control1' }%>
			</div>

			<div class="form-group">
				<%= f.label :image%>
				<%= f.file_field :image, { class: 'form-control2' } %>
			</div>

			<div class="form-group">
				<%= f.label :created_by%>
				<%= f.text_field :created_by, { class: 'form-control1' } %>
			</div>

			<div class="form-group">
				<%= f.label :category%>
				<%= f.text_field :category, { class: 'form-control1' } %>
			</div>

			<div class="form-group">
				<%= f.label :body%>
				<%= f.text_area :body, { class: 'form-control', style: 'border: 1px solid #ccc;' } %>
			</div>

			<div class="form-group">
				<%= f.submit class: "btn btn-info" %>
			</div>
		</div>
		<div class="col-sm-4"></div>
	</div>

<%end%>